
{{ form_start(form) }}

{% for field in [
    form.nom,
    form.dateHeureDebut,
    form.dateLimiteInscription,
    form.duree,
    form.nbInscriptionMax,
    form.lieu,
    form.infosSortie,

] %}
    <div class="mb-4">
    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(field, {'attr': {
        'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'
    }}) }}
    {{ form_errors(field) }}
    </div>
{% endfor %}
<div class="text-center flex space-x-4 gap-4">
<button
    value="save"
    type="submit"
    class="w-full bg-[#4f8e6a] text-white py-2 px-4 rounded-md shadow-sm hover:bg-black hover:text-white transition duration-300 ease-in-out cursor-pointer focus:outline-none "
>
    Enregistrer
</button>
<button
    value="publish"
    type="submit"
    class="w-full bg-[#fac108] text-black py-2 px-4 rounded-md shadow-sm hover:bg-black hover:text-[#fac108] transition duration-300 ease-in-out cursor-pointer focus:outline-none "
>
    Publier
</button>
</div>
<div class="text-center mt-8">
<a href="{{path('sortie_list')}}" class="w-full bg-[#d17c47] text-white py-4 px-4 rounded-md shadow-sm hover:bg-black hover:text-[#d17c47] transition duration-300 ease-in-out cursor-pointer focus:outline-none ">Retour Ã  la liste</a>
</div>

{{ form_end(form) }}