{{ form_start(form) }}

<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
        {{ form_widget(form.email, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-[#fac108] focus:ring-opacity-50', 'placeholder': 'Entrez votre email'}}) }}
