{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="mt-20 flex items-center justify-center">
  <div class="max-w-sm w-full p-6 bg-white shadow-lg rounded-lg">
    <form method="post">

      
      {% if app.user %}
        <div class="mb-4 text-green-600">
          You are logged in as {{ app.user.userIdentifier }},
          <a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Logout</a>
        </div>
      {% endif %}
      
      <h1 class="text-2xl font-semibold text-center mb-6">Connexion</h1>

            {% if error %}
        <div class="mb-4 text-red-600">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}
      
      <div class="mb-4">
        <label for="username" class="block text-sm font-medium text-gray-700">Email ou Pseudo</label>
        <input
          value="{{ last_username }}"
          name="_username"
          id="username"
          class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
          autocomplete="email"
          required
          autofocus
        />
      </div>
      
      <div class="mb-6">
        <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
        <input
          type="password"
          name="_password"
          id="password"
          class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
          autocomplete="current-password"
          required
        />
      </div>

      <input
        type="hidden"
        name="_csrf_token"
        data-controller="csrf-protection"
        value="{{ csrf_token('authenticate') }}"
      />
      
      <div class="flex items-center mb-6">
        <input
          type="checkbox"
          name="_remember_me"
          id="_remember_me"
          class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
        />
        <label for="_remember_me" class="ml-2 text-sm text-gray-600">Se souvenir de moi</label>
      </div>
      
      <button
        type="submit"
        class="w-full bg-[#fac108] text-black py-2 px-4 rounded-md shadow-sm hover:bg-black hover:text-[#fac108] transition duration-300 ease-in-out cursor-pointer focus:outline-none "
      >
        Se connecter
      </button>
    </form>
  </div>
</div>
{% endblock %}
